{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "types": [
            "mocha",
            "chai",
            "sinon",
            "sinon-chai"
        ]
    },
    "include": [
        "test/**/*",
        "test-globals.d.ts",
        "globals.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        // Exclude test bundle files - they have complex require.context usage
        "test/*Bundle.js"
    ]
}